<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="闲置状态"
        app:layout_constraintBottom_toTopOf="@+id/btn_refresh1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_refresh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一种刷新UI方式"
        app:layout_constraintBottom_toTopOf="@+id/btn_refresh2"
        app:layout_constraintEnd_toEndOf="@+id/tv_show"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_show"
        app:layout_constraintTop_toBottomOf="@+id/tv_show" />

    <Button
        android:id="@+id/btn_refresh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第二种刷新UI方式"
        app:layout_constraintBottom_toTopOf="@+id/btn_refresh3"
        app:layout_constraintEnd_toEndOf="@+id/btn_refresh1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_refresh1"
        app:layout_constraintTop_toBottomOf="@+id/btn_refresh1" />

    <Button
        android:id="@+id/btn_refresh3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三种刷新UI方式"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_refresh2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_refresh2"
        app:layout_constraintTop_toBottomOf="@+id/btn_refresh2" />
</androidx.constraintlayout.widget.ConstraintLayout>