<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_media_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MediaPlayer"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_sound_pool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sound_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SoundPool"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_camera"
        app:layout_constraintEnd_toEndOf="@+id/btn_media_player"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_media_player"
        app:layout_constraintTop_toBottomOf="@+id/btn_media_player" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_media_store"
        app:layout_constraintEnd_toEndOf="@+id/btn_sound_pool"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_sound_pool"
        app:layout_constraintTop_toBottomOf="@+id/btn_sound_pool" />

    <Button
        android:id="@+id/btn_media_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MediaStore"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_camera"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_camera"
        app:layout_constraintTop_toBottomOf="@+id/btn_camera" />
</androidx.constraintlayout.widget.ConstraintLayout>